<Window x:Class="Restaurant.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.Client"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="800" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Height="26" Margin="2" FontWeight="Bold" FontSize="15">
            <MenuItem Header="Рестораны"/>
            <MenuItem Header="Столики"/>
        </Menu>
        <Separator Grid.Row="1" VerticalAlignment="Top"/>

        <DockPanel Margin="2" Grid.Row="1">
            <Frame x:Name="MainPageZone" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
